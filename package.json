{
    "name": "conference-app",
    "version": "0.0.1",
    "bugs": "https://github.com/conference-app/issues",
    "dependencies": {
        "compression": "^1.7.4",
        "dotenv": "^14.3.2",
        "express": "^4.17.2",
        "helmet": "^5.0.2",
        "jsforce": "^1.11.0",
        "lwc-services": "^3.2.2",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/conference-app",
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "nodemonConfig": {
        "watch": [
            "src/server/**/*.js"
        ],
        "ext": "js",
        "ignore": [
            "src/**/*.spec.js",
            "src/**/*.test.js"
        ],
        "exec": "node ./src/server/api.js"
    },
    "repository": "conference-app",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "postinstall": "husky install",
        "precommit": "npm run prettier:verify && [ $? -eq 0 ] && npm run lint",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "start": "run-p start:client start:api",
        "start:api": "node src/server/api.js",
        "start:client": "node scripts/server.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "run-p watch:client watch:server",
        "watch:client": "lwc-services watch",
        "watch:server": "nodemon"
    }
}
